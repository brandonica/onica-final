  "Resources": {
    "VPCOnica": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "InstanceTenancy": "default",
        "EnableDnsSupport": "true",
        "EnableDnsHostnames": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": "Onica-VPC"
          }
        ]
      }
    },
    "OnicaIGW": {
      "Type": "AWS::EC2::InternetGateway",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": "Onica InternetGateway"
          }
        ]
      }
    },
    "gw1": {
      "Type": "AWS::EC2::VPCGatewayAttachment",
      "Properties": {
        "VpcId": {
          "Ref": "VPCOnica"
        },
        "InternetGatewayId": {
          "Ref": "OnicaIGW"
        }
      }
    },
    "Subnet1Public": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "CidrBlock": "10.0.1.0/24",
        "AvailabilityZone": {
                    "Fn::Select": [
                        "0",
                        {
                            "Ref": "AvailabilityZones"
                        }
                    ]
                },
        "VpcId": {
          "Ref": "VPCOnica"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Bastion Public Subnet"
          }
        ]
      }
    },
    "Subnet2Public": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "CidrBlock": "10.0.2.0/24",
        "AvailabilityZone": {
                    "Fn::Select": [
                        "1",
                        {
                            "Ref": "AvailabilityZones"
                        }
                    ]
                },
        "VpcId": {
          "Ref": "VPCOnica"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "NAT Gateway Public Subnet"
          }
        ]
      }
    },
    "Subnet3Private": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "CidrBlock": "10.0.3.0/24",
        "AvailabilityZone": {
                    "Fn::Select": [
                        "0",
                        {
                            "Ref": "AvailabilityZones"
                        }
                    ]
                },
        "VpcId": {
          "Ref": "VPCOnica"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "ASG Subnet Private 1"
          }
        ]
      }
    },
    "Subnet4Private": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "CidrBlock": "10.0.4.0/24",
        "AvailabilityZone": {
                    "Fn::Select": [
                        "1",
                        {
                            "Ref": "AvailabilityZones"
                        }
                    ]
                },
        "VpcId": {
          "Ref": "VPCOnica"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "ASG Subnet Private 2"
          }
        ]
      }
    },
    "OnicaRTPublic": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "VPCOnica"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Onica Public RouteTable"
          }
        ]
      }
    },
    "OnicaRTPrivate": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "VPCOnica"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Onica Private Routetable"
          }
        ]
      }
    },
    "subnetroute1": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "OnicaRTPrivate"
        },
        "SubnetId": {
          "Ref": "Subnet4Private"
        }
      }
    },
    "subnetroute2": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "OnicaRTPrivate"
        },
        "SubnetId": {
          "Ref": "Subnet3Private"
        }
      }
    },
    "subnetroute3": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "OnicaRTPublic"
        },
        "SubnetId": {
          "Ref": "Subnet1Public"
        }
      }
    },
    "subnetroute4": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": {
          "Ref": "OnicaRTPublic"
        },
        "SubnetId": {
          "Ref": "Subnet2Public"
        }
      }
    },
    "route1": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "DestinationCidrBlock": "0.0.0.0/0",
        "RouteTableId": {
          "Ref": "OnicaRTPrivate"
        },
        "NatGatewayId" : {
          "Ref" : "OnicaNATGateway"
        }
      },
      "DependsOn" : "OnicaNATGateway"
    },
    "route2": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "DestinationCidrBlock": "0.0.0.0/0",
        "RouteTableId": {
          "Ref": "OnicaRTPublic"
        },
        "GatewayId": {
          "Ref": "OnicaIGW"
        }
      },
      "DependsOn": "gw1"
    },
    "OnicaBastionInstance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "DisableApiTermination": "false",
        "InstanceInitiatedShutdownBehavior": "stop",
        "ImageId": { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
                                          { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "InstanceType" }, "Arch" ] } ] },
        "InstanceType": "t2.micro",
        "KeyName": { "Ref" : "KeyName" },
        "Monitoring": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": "Onica Bastion Server"
          }
        ],
        "NetworkInterfaces": [
          {
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": {
              "Ref": "Subnet1Public"
            },
            "GroupSet": [
              {
                "Ref": "OnicaBastionSG"
              }
            ],
            "AssociatePublicIpAddress": "true"
          }
        ]
      }
    },
    "OnicaNATGateway":{
    	"Type" : "AWS::EC2::NatGateway",
    	"Properties" : {
    		"AllocationId" : { "Fn::GetAtt" : ["OnicaNATGatewayEIP", "AllocationId"]},
		    "SubnetId" : { "Ref" : "Subnet2Public" },
		    "Tags" : [ {"Key" : "Name", "Value" : "OnicaNATGATEWAY" } ]
    	},
    	"DependsOn" : "OnicaIGW"
    	},
    "OnicaNATGatewayEIP": {
  		"Type" : "AWS::EC2::EIP",
  		"Properties" : {
    		"Domain" : "vpc"
  		}
	},
    "OnicaBastionSG": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Open port 22",
        "VpcId": {
          "Ref": "VPCOnica"
        },
	    "SecurityGroupIngress" : [ {
	         "IpProtocol" : "tcp",
	         "FromPort" : "22",
	         "ToPort" : "22",
	         "CidrIp" : "0.0.0.0/0"
	      } ]
      }
    },
    "OnicaELBASB": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "Subnets": [
          {
            "Ref": "Subnet1Public"
          },
          {
            "Ref": "Subnet2Public"
          }
        ],
        "HealthCheck": {
          "HealthyThreshold": "2",
          "Interval": "30",
          "Target": "TCP:80",
          "Timeout": "5",
          "UnhealthyThreshold": "2"
        },
        "ConnectionDrainingPolicy": {
          "Enabled": "true",
          "Timeout": "300"
        },
        "ConnectionSettings": {
          "IdleTimeout": "60"
        },
        "CrossZone": "true",
        "SecurityGroups": [
          {
            "Ref": "OnicaELBSG"
          }
        ],
        "Listeners": [
          {
            "InstancePort": "80",
            "LoadBalancerPort": "80",
            "Protocol": "HTTP",
            "InstanceProtocol": "HTTP"
          }
        ]
      }
    },
    "OnicaWebASG" : {
      "Type" : "AWS::AutoScaling::AutoScalingGroup",
      "DependsOn" : "route1",
      "Properties" : {
        "AvailabilityZones" : { "Ref" : "AvailabilityZones"},
        "MinSize" : "2",
        "MaxSize" : "5",
        "LoadBalancerNames" : [ { "Ref" : "OnicaELBASB" } ],
        "Cooldown": "300",
        "DesiredCapacity": "2",
        "HealthCheckGracePeriod": "300",
        "HealthCheckType": "EC2",
        "VPCZoneIdentifier": [
          {
            "Ref": "Subnet4Private"
          },
          {
            "Ref": "Subnet3Private"
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "OnicaWebASGLaunchConfig"
        }
      }
  	},
  	"OnicaWebASGLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
